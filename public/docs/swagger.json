                "responses": {
                    "200": {
                        "description": "A list of tournaments",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Tournament"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Tournaments"
                ],
                "summary": "Create a new tournament",
                "operationId": "d6053f0972883878f37e936e0316a92d",
